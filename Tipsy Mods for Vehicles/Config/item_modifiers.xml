<configs>

  <append xpath="/item_modifiers">



	<item_modifier name="HeadLights Mod" installable_tags="vehicle" modifier_tags="light" type="attachment">
        <property name="CustomIcon" value="resourceHeadlight"/>
		<property name="CustomIconTint" value="00FFE4"/>
		<property name="SellableToTrader" value="false"/>
        <property name="EconomicValue" value="7000"/>
        <property name="Stacknumber" value="1"/> <property name="Group" value="Mods"/>
        <property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>
        <effect_group tiered="false">
            <passive_effect name="LightIntensity" operation="perc_set" value="3.0"/>
        </effect_group>
    </item_modifier>

	<item_modifier name="Turbo Mod" installable_tags="vehicle" modifier_tags="speed" type="attachment">
        <property name="CustomIcon" value="toolAndDieSet"/>
		<property name="CustomIconTint" value="00FFE4"/>
		<property name="SellableToTrader" value="false"/>
        <property name="EconomicValue" value="7000"/>
        <property name="Stacknumber" value="1"/> <property name="Group" value="Mods"/>
        <property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>
        <effect_group tiered="false">
	<passive_effect name="VehicleFuelUsePer" operation="perc_set" value="1.0"/>
            <passive_effect name="VehicleVelocityMaxPer" operation="perc_set" value="1.4"/>
            <passive_effect name="VehicleVelocityMaxTurboPer" operation="perc_set" value="1.4"/>
        </effect_group>
    </item_modifier>

  </append>
</configs>